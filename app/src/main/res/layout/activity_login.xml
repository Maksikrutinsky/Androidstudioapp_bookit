<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/iconIv"
        android:background="@drawable/logo"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:background="@drawable/openregandlogin"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:gravity="center"
        android:text="ברוך שובך, שמחים שחזרת"
        android:textColor="#99000000"
        android:textSize="16sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="330dp"
        android:layout_marginRight="30dp">


        <EditText
            android:id="@+id/userLogin"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/bwritingline"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColorHint="#66000000" />

        <EditText
            android:id="@+id/passLogin"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/bwritingline"
            android:drawableLeft="@drawable/ic_pass"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColorHint="#66000000" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="500dp">


        <CheckBox
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="זכור אותי!"
            android:gravity="right|center_vertical"/>

        <TextView
            android:id="@+id/textForgetPass"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="שכחתי סיסמה"
            android:gravity="right|center_vertical"/>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBtn"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="600dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button"
        android:text="התחברות"
        android:textColor="@color/white"
        android:textStyle="bold"/>


</RelativeLayout>